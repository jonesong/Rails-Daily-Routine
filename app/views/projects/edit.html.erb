<% @page_title = "#{t 's_projects', as: @project.name}" %>

<h2><%= "#{t 'edit_project', as: @project.name}" %></h2>

<%= form_for(@project) do |f| %>
  <%= render(:partial => 'form', :locals => {:f => f, submit: t('update_project')}) %>
<% end %>

<h2><em><%= t 'task_list' %></em></h2>

<div>
  <table>
    <tr class="list">
      <th><%= t 'task_name' %></th>
      <th><%= t 'task_note' %></th>
      <th><%= t 'task_done' %></th>
      <th width="100"></th>
      <th width="100"></th>
    </tr>
    <% @tasks.each do |task| %>
    <tr class="list">
      <td><%= link_to(task.name, task_path(task)) %></td>
      <td><%= task.note %></td>
      <td><%= task.done ? 'Yes' : 'No' %></td>
      <td><%= link_to("#{t 'edit'}", edit_task_path(task), :class => 'btn btn-success custom-width') %></td>
      <td><%= link_to("#{t 'delete'}", delete_task_path(task), :class => 'btn btn-danger custom-width') %></td>
    </tr>
    <% end %>
  </table>

</div>
<%= link_to("#{t 'add'} #{t 'new'} #{t 'task'}", new_task_path) %>
<br><br>
<%= link_to("#{t 'back_to_projects'}", projects_path, :class => 'back-link') %>
