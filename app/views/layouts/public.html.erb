<!DOCTYPE html>
<html>
  <head>
    <title><%= t 'daily_routine' %><%= " | #{@page_title}" if @page_title %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>
  <body>

    <div id="header">
      <%= render(:partial => 'layouts/header') %>
    </div>

    <div id="main">
      <% if !flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <div id="content">
        <%= yield %>
      </div>
    </div>

    <div id="footer">
      <p>&copy; <%= t 'footer' %></p>
    </div>

  </body>
</html>
