<% @page_title = t :admin_login %>

<div class="login">
  <h1>LOGIN</h1>
  <%= form_tag(access_attempt_login_path, :method => :post) do %>
  <table>
    <tr>
      <td><%= label_tag(:username) %></td>
      <td><%= text_field_tag(:username, params[:username], autofocus: true) %></td>
    </tr>
    <tr>
      <td><%= label_tag(:password) %></td>
      <td><%= password_field_tag(:password) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag(t :log_in) %></td>
    </tr>
  </table>
  <% end %>
</div>
